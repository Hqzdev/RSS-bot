# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Database Configuration
DB_URL=sqlite:///data/db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost/rssbot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Polling Configuration
BASE_POLL_MINUTES=10
DIGEST_CRON=0 9 * * *

# Content Filtering
ALLOW_LANGS=ru,en
MIN_WORDS=30
DEDUP_WINDOW_DAYS=7

# URL Shortener
SHORTENER_BASE=https://t.me/yourbot?start=go_

# UTM Parameters
UTM_ON=true
UTM_SOURCE=telegram
UTM_MEDIUM=social
UTM_CAMPAIGN=rss_auto

# MTProto Configuration (for Stories)
API_ID=123456
API_HASH=your_api_hash_here
SESSION_ENC_KEY=your_base64_fernet_key_here

# Optional Proxy Configuration
PROXY=

# Media Processing
MAX_IMAGE_SIZE=1280
STORY_IMAGE_WIDTH=1080
STORY_IMAGE_HEIGHT=1920
STORY_TTL_HOURS=24

# Queue Configuration
QUEUE_MAX_SIZE=1000
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/rssbot.log
